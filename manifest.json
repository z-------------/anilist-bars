{
  "manifest_version": 2,
  "name": "AniList Enhancement Suite",
  "version": "0.9.0",
  "author": "Zachary Guard",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs",
    "contextMenus",
    "*://*.anilist.co/*"
  ],
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "content_scripts": [{
    "matches": [ "*://anilist.co/*" ],
    "css": [ "style.css" ],
    "js": [
      "browser-polyfill.min.js",
      "common.js",
      "lib/timeago/timeago.min.js",
      "scripts/bars.js", "scripts/infocards.js"
    ]
  }],
  "background": {
    "scripts": [
      "browser-polyfill.min.js",
      "common.js",
      "background/startup.js",
      "background/notifs.js",
      "background/contextMenu.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "options.json",
    "img/*"
  ],
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icon/icon16.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "anilist-es@zacharyguard",
      "strict_min_version": "42.0"
    }
  }
}
