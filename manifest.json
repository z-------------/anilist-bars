{
  "manifest_version": 2,
  "name": "AniList Enhancement Suite",
  "version": "0.3.0",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs",
    "*://*.anilist.co/*"
  ],
  "content_scripts": [{
    "matches": [ "*://anilist.co/*" ],
    "css": [ "style.css" ],
    "js": [ "common.js", "scripts/bars.js", "scripts/infocards.js" ]
  }],
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "web_accessible_resources": [
    "options.json",
    "img/*"
  ],
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_popup": "popup/index.html"
  }
}
